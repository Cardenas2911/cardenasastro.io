<script>
  function initMobileMenu() {
      const btn = document.getElementById("mobile-menu-btn");
      const overlay = document.getElementById("mobile-menu-overlay");
      const menu = document.getElementById("mobile-menu");
      const lines = btn?.querySelectorAll(".burg-line");
      const menuLinks = menu?.querySelectorAll("a");
      const accordionBtns = menu?.querySelectorAll(".accordion-btn");

      let isOpen = false;

      function toggleMenu() {
        isOpen = !isOpen;
        
        // Update ARIA
        btn?.setAttribute("aria-expanded", String(isOpen));
        
        // Toggle Overlay
        if (isOpen) {
            overlay?.classList.remove("opacity-0", "pointer-events-none");
            document.body.classList.add("overflow-hidden");
        } else {
            overlay?.classList.add("opacity-0", "pointer-events-none");
            document.body.classList.remove("overflow-hidden");
        }

        // Toggle Menu Panel (Slide LEFT)
        if (isOpen) {
            menu?.classList.remove("-translate-x-full");
        } else {
            menu?.classList.add("-translate-x-full");
        }

        // Animate Hamburger Lines to X
        if (isOpen) {
            lines?.[0]?.classList.add("rotate-45", "translate-y-[0.35rem]");
            lines?.[1]?.classList.add("opacity-0", "translate-x-4");
            lines?.[2]?.classList.add("-rotate-45", "-translate-y-[0.35rem]");
        } else {
            lines?.[0]?.classList.remove("rotate-45", "translate-y-[0.35rem]");
            lines?.[1]?.classList.remove("opacity-0", "translate-x-4");
            lines?.[2]?.classList.remove("-rotate-45", "-translate-y-[0.35rem]");
        }
      }

      // Cleanup old listeners to prevent duplicates (if re-init)
      const newBtn = btn?.cloneNode(true) as HTMLElement;
      if (btn && newBtn) {
          btn.parentNode?.replaceChild(newBtn, btn);
          newBtn.addEventListener("click", toggleMenu);
      }
      
      // We can't easily clone overlay without losing content if not careful, 
      // but usually overlays don't have complex internal state. 
      // Simpler: just check if listener attached or strict clone.
      // For now, let's just re-attach safely or assume browser garbage collects on nav.
      // Actually, cloning 'btn' breaks the reference 'const btn', so we need to use the new reference.
      
      // Let's stick to simple removal if we store reference, OR just use adding listeners is idempotent-ish if we use named functions,
      // BUT anonymous arrow functions duplicate.
      
      // Improved: Use named listener for toggle
      btn?.removeEventListener("click", toggleMenu);
      btn?.addEventListener("click", toggleMenu);
      
      overlay?.removeEventListener("click", toggleMenu);
      overlay?.addEventListener("click", toggleMenu);
      
      // Close on Escape
      document.removeEventListener("keydown", handleEscape);
      document.addEventListener("keydown", handleEscape);

      function handleEscape(e: KeyboardEvent) {
          if (e.key === "Escape" && isOpen) toggleMenu();
      }

      // Close on Navigation (Links only)
      menuLinks?.forEach(link => {
          link.removeEventListener("click", toggleMenu);
          link.addEventListener("click", toggleMenu);
      });

      // Accordion Logic
      accordionBtns?.forEach(accBtn => {
          // Clone to clear outdated listeners
          const newAccBtn = accBtn.cloneNode(true) as HTMLElement;
          accBtn.parentNode?.replaceChild(newAccBtn, accBtn);
          
          newAccBtn.addEventListener("click", (e) => {
              e.stopPropagation(); // Prevent bubbling
              e.preventDefault();  // Prevent default button behavior
              
              const chevron = newAccBtn.querySelector(".chevron");
              // DOM Structure:
              // div.flex-col
              //   > div.group (wrapper for link + btn) ---> btn is here
              //   > div.submenu (hidden)
              const actionWrapper = newAccBtn.closest("div"); // The div.group
              const mainContainer = actionWrapper?.parentElement; // The div.flex-col
              const submenu = mainContainer?.querySelector(".submenu");
              
              if (submenu) {
                  submenu.classList.toggle("hidden");
                  chevron?.classList.toggle("rotate-180");
              } else {
                  console.warn("Submenu not found for", newAccBtn);
              }
          });
      });
  }

  // Init on load
  initMobileMenu();

  // Support Astro View Transitions
  document.addEventListener('astro:page-load', initMobileMenu);
</script>

