---
import ThemeToggle from "./ThemeToggle.astro";

const navItems = [
  { label: "Inicio", href: "/" },
  { 
    label: "Servicios", 
    href: "/servicios",
    children: [
      { label: "Consultoría SEO Estratégica", href: "/servicios/consultoria-seo" },
      { label: "Desarrollo WordPress SEO-First", href: "/servicios/desarrollo-wordpress-seo-first" },
      { label: "SEO Local Colombia", href: "/servicios/seo-local" },
      { label: "E-commerce & Embudos", href: "/servicios/ecommerce-embudos-venta-colombia" },
      { label: "IA aplicada al SEO", href: "/servicios/ia-seo" }
    ]
  },
  { 
    label: "Portafolio", 
    href: "/portafolio"
  },
  { label: "Contacto", href: "/contacto" },
  { label: "Aprende de Marketing", href: "/blog" },
];

const currentPath = Astro.url.pathname;
const isActive = (href: string) => {
  if (href === "/" && currentPath !== "/") return false;
  return currentPath.startsWith(href);
};
---

<header class="fixed top-0 left-0 w-full z-50 pointer-events-none">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-center">
    <nav
      class="pointer-events-auto bg-black/80 backdrop-blur-md border border-white/10 rounded-b-2xl px-6 py-4 flex items-center justify-between lg:justify-center gap-6 shadow-[0_4px_30px_rgba(255,255,255,0.03)] relative"
    >
      <!-- Mobile Logo/Brand (Optional, keeps layout balanced on mobile) -->
      <a href="/" class="lg:hidden">
        <img
          src="https://cardenasnicolas.com/wp-content/uploads/2025/05/logo-Nicolas-Cardenas.webp"
          alt="Nicolas Cardenas Logo"
          class="h-8 w-auto object-contain"
          loading="eager"
        />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-6">
        {
          navItems.map((item) => {
            const active = isActive(item.href);
            const hasChildren = item.children && item.children.length > 0;
            
            return (
              <div class="relative group">
                <a
                  href={item.href}
                  class:list={[
                    "relative text-xs uppercase tracking-wider font-medium transition-colors flex items-center gap-1",
                    active ? "text-gold" : "text-neutral-300 hover:text-white",
                  ]}
                >
                  {item.label}
                  {hasChildren && (
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 opacity-70 group-hover:rotate-180 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                  )}
                  
                  <div
                    class:list={[
                      "absolute -bottom-2 left-1/2 flex gap-1 transition-all duration-300 transform -translate-x-1/2",
                      active
                        ? "opacity-100 translate-y-0"
                        : "opacity-0 group-hover:opacity-100 translate-y-2 group-hover:translate-y-0",
                    ]}
                  >
                    <span class="w-1 h-1 bg-gold rounded-full" />
                    <span class="w-1 h-1 bg-gold rounded-full opacity-70" />
                    <span class="w-1 h-1 bg-gold rounded-full opacity-40" />
                  </div>
                </a>

                {hasChildren && (
                  <div class="absolute left-1/2 -translate-x-1/2 top-full pt-4 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform translate-y-2 group-hover:translate-y-0 w-64">
                    <div class="bg-black/90 backdrop-blur-xl border border-white/10 rounded-xl p-2 shadow-xl overflow-hidden">
                      {item.children.map((child) => (
                        <a
                          href={child.href}
                          class="block px-4 py-3 text-sm text-neutral-300 hover:text-white hover:bg-white/5 rounded-lg transition-colors"
                        >
                          {child.label}
                        </a>
                      ))}
                    </div>
                  </div>
                )}
              </div>
            );
          })
        }


        <div class="h-4 w-px bg-white/10 mx-2"></div>
        <ThemeToggle />
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="lg:hidden text-white hover:text-gold transition-colors p-2"
        aria-label="Abrir menú"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </nav>
  </div>

  <!-- Mobile Menu Overlay -->
  <div
    id="mobile-menu"
    class="fixed inset-0 bg-neutral-950/95 backdrop-blur-xl z-50 transform translate-x-full transition-transform duration-300 lg:hidden pointer-events-auto flex flex-col items-center justify-center"
  >
    <button
      id="close-menu-btn"
      class="absolute top-6 right-6 text-neutral-400 hover:text-white transition-colors"
      aria-label="Cerrar menú"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-8 w-8"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <div class="flex flex-col items-center gap-8 animate-fade-in-up">
      {
        navItems.map((item) => {
          const active = isActive(item.href);
          const hasChildren = item.children && item.children.length > 0;
          
          return (
            <div class="flex flex-col items-center gap-4 w-full">
              <a
                href={item.href}
                class:list={[
                  "text-2xl font-bold tracking-tight transition-colors",
                  active ? "text-gold" : "text-white hover:text-gold",
                ]}
              >
                {item.label}
              </a>
              
              {hasChildren && (
                <div class="flex flex-col items-center gap-3 w-full bg-white/5 rounded-xl py-4 px-4">
                  {item.children.map((child) => (
                    <a
                      href={child.href}
                      class="text-base text-neutral-300 hover:text-white transition-colors text-center"
                    >
                      {child.label}
                    </a>
                  ))}
                </div>
              )}
            </div>
          );
        })
      }

      <div class="w-16 h-px bg-white/10 my-2"></div>

      <div class="mt-8 flex flex-col items-center gap-6">
        <ThemeToggle />
      </div>
    </div>
  </div>
</header>

<script>
  const mobileMenuBtn = document.getElementById("mobile-menu-btn");
  const closeMenuBtn = document.getElementById("close-menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");
  const menuLinks = mobileMenu?.querySelectorAll("a");

  function toggleMenu() {
    mobileMenu?.classList.toggle("translate-x-full");
    document.body.classList.toggle("overflow-hidden");
  }

  mobileMenuBtn?.addEventListener("click", toggleMenu);
  closeMenuBtn?.addEventListener("click", toggleMenu);

  // Close on link click
  menuLinks?.forEach((link) => {
    link.addEventListener("click", toggleMenu);
  });
</script>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.5s ease-out forwards;
  }
</style>
