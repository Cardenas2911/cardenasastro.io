---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export const prerender = true;

export async function getStaticPaths() {
    const portfolios = await getCollection("portafolio");
    return portfolios.map((item) => ({
        params: { slug: item.slug },
        props: { item, allPortfolios: portfolios },
    }));
}

const { item, allPortfolios } = Astro.props;
const { Content } = await item.render();

// Get related portfolios
const relatedPortfolios = allPortfolios
    .filter((p) => p.slug !== item.slug)
    .sort(() => 0.5 - Math.random())
    .slice(0, 3);
// ... existing code ...

// Helper to determine if we have enhanced content
const hasEnhancedContent =
    item.data.challengeText ||
    item.data.solutionText ||
    item.data.resultsText ||
    (item.data.galleryImages && item.data.galleryImages.length > 0);

// Icons
const BoltIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gold"><path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"></path></svg>`;
const BulbIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gold"><path d="M15 14c.2-1 .7-1.7 1.5-2.5 1-1 1.5-2 1.5-3.5A6 6 0 0 0 6 8c0 1 .2 2.2 1.5 3.5.7.7 1.3 1.5 1.5 2.5"></path><path d="M9 18h6"></path><path d="M10 22h4"></path></svg>`;
const ChartIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gold"><path d="M3 3v18h18"></path><path d="m19 9-5 5-4-4-3 3"></path></svg>`;
---

<Layout title={`${item.data.title} - Portafolio`}>
    <!-- Background Decor (Optional) -->
    <div
        class="fixed inset-0 pointer-events-none z-[-1] overflow-hidden opacity-30 dark:opacity-20"
    >
        <div
            class="absolute top-0 right-0 w-[500px] h-[500px] bg-gold/10 rounded-full blur-[100px] -translate-y-1/2 translate-x-1/2"
        >
        </div>
        <div
            class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-neutral-800/20 rounded-full blur-[100px] translate-y-1/2 -translate-x-1/2"
        >
        </div>
    </div>

    <div
        class="grid grid-cols-1 lg:grid-cols-[280px_1fr] gap-8 lg:gap-24 py-12 lg:py-20 max-w-7xl mx-auto px-4 md:px-8"
    >
        <!-- Sticky Table of Contents Sidebar -->
        <aside class="hidden lg:block relative">
            <div
                class="sticky top-24 backdrop-blur-xl bg-white/80 dark:bg-neutral-900/80 border border-neutral-200 dark:border-neutral-800 rounded-2xl p-6 shadow-xl shadow-black/5"
            >
                <h3
                    class="font-bold text-neutral-900 dark:text-white mb-6 flex items-center gap-3 text-lg"
                >
                    <span class="bg-gold/10 p-1.5 rounded-lg text-gold">üìë</span
                    > Tabla de contenidos
                </h3>
                <nav class="space-y-1" id="toc-nav">
                    <a
                        href="#info"
                        class="toc-link group flex items-center gap-3 py-2.5 px-4 text-sm font-medium text-neutral-600 dark:text-neutral-400 hover:text-neutral-900 dark:hover:text-white hover:bg-neutral-50 dark:hover:bg-neutral-800/50 rounded-xl transition-all"
                    >
                        <span
                            class="indicator w-1.5 h-1.5 rounded-full bg-neutral-300 dark:bg-neutral-700 group-hover:bg-gold transition-colors"
                        ></span>
                        Informaci√≥n del Proyecto
                    </a>
                    {
                        item.data.challengeText && (
                            <a
                                href="#desafio"
                                class="toc-link group flex items-center gap-3 py-2.5 px-4 text-sm font-medium text-neutral-600 dark:text-neutral-400 hover:text-neutral-900 dark:hover:text-white hover:bg-neutral-50 dark:hover:bg-neutral-800/50 rounded-xl transition-all"
                            >
                                <span class="indicator w-1.5 h-1.5 rounded-full bg-neutral-300 dark:bg-neutral-700 group-hover:bg-gold transition-colors" />
                                El Desaf√≠o
                            </a>
                        )
                    }
                    {
                        item.data.solutionText && (
                            <a
                                href="#solucion"
                                class="toc-link group flex items-center gap-3 py-2.5 px-4 text-sm font-medium text-neutral-600 dark:text-neutral-400 hover:text-neutral-900 dark:hover:text-white hover:bg-neutral-50 dark:hover:bg-neutral-800/50 rounded-xl transition-all"
                            >
                                <span class="indicator w-1.5 h-1.5 rounded-full bg-neutral-300 dark:bg-neutral-700 group-hover:bg-gold transition-colors" />
                                La Soluci√≥n
                            </a>
                        )
                    }
                    {
                        item.data.resultsText && (
                            <a
                                href="#resultados"
                                class="toc-link group flex items-center gap-3 py-2.5 px-4 text-sm font-medium text-neutral-600 dark:text-neutral-400 hover:text-neutral-900 dark:hover:text-white hover:bg-neutral-50 dark:hover:bg-neutral-800/50 rounded-xl transition-all"
                            >
                                <span class="indicator w-1.5 h-1.5 rounded-full bg-neutral-300 dark:bg-neutral-700 group-hover:bg-gold transition-colors" />
                                Los Resultados
                            </a>
                        )
                    }
                    {
                        item.data.galleryImages &&
                            item.data.galleryImages.length > 0 && (
                                <a
                                    href="#galeria"
                                    class="toc-link group flex items-center gap-3 py-2.5 px-4 text-sm font-medium text-neutral-600 dark:text-neutral-400 hover:text-neutral-900 dark:hover:text-white hover:bg-neutral-50 dark:hover:bg-neutral-800/50 rounded-xl transition-all"
                                >
                                    <span class="indicator w-1.5 h-1.5 rounded-full bg-neutral-300 dark:bg-neutral-700 group-hover:bg-gold transition-colors" />
                                    Galer√≠a
                                </a>
                            )
                    }
                </nav>

                {
                    item.data.projectLink && (
                        <div class="mt-8 pt-6 border-t border-neutral-100 dark:border-neutral-800/50">
                            <a
                                href={item.data.projectLink}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="flex items-center justify-center w-full gap-2 bg-neutral-900 dark:bg-white text-white dark:text-neutral-900 py-3 rounded-xl font-bold hover:shadow-lg hover:scale-[1.02] transition-all duration-300 text-sm"
                            >
                                Visitar Sitio Web ‚Üó
                            </a>
                        </div>
                    )
                }
            </div>
        </aside>

        <!-- Main Content -->
        <div class="min-w-0">
            {/* Breadcrumbs */}
            <nav
                class="flex items-center text-xs md:text-sm text-neutral-500 dark:text-neutral-500 mb-8 font-medium transition-colors"
                aria-label="Breadcrumb"
            >
                <a href="/" class="hover:text-gold transition-colors">Inicio</a>
                <span class="mx-2 text-neutral-300">/</span>
                <a href="/portafolio" class="hover:text-gold transition-colors"
                    >Portafolio</a
                >
                <span class="mx-2 text-neutral-300">/</span>
                <span
                    class="text-neutral-900 dark:text-neutral-300 truncate max-w-[150px] sm:max-w-xs transition-colors"
                    >{item.data.title}</span
                >
            </nav>

            <header class="mb-20 scroll-mt-24 section-scroll" id="info">
                {/* Title & Headline */}
                <div class="mb-12">
                    <div
                        class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-gold/10 text-gold text-xs font-bold uppercase tracking-wider mb-6 border border-gold/20"
                    >
                        {item.data.portfolioCategories?.[0] || "Caso de √âxito"}
                    </div>
                    <h1
                        class="text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 dark:text-white leading-tight mb-6 tracking-tight"
                    >
                        {item.data.customH1 || item.data.title}
                    </h1>
                    <p
                        class="text-xl text-neutral-600 dark:text-neutral-400 max-w-2xl leading-relaxed"
                    >
                        {item.data.description}
                    </p>
                </div>

                <div
                    class="flex flex-col-reverse xl:flex-row gap-12 lg:gap-16 items-start"
                >
                    {/* Info Column */}
                    <div class="flex-1 w-full space-y-8">
                        {/* Project Description Content */}
                        <div class="relative">
                            <div
                                id="description-container"
                                class="prose prose-lg dark:prose-invert text-neutral-600 dark:text-neutral-400 max-w-none prose-headings:font-bold prose-headings:text-neutral-900 dark:prose-headings:text-white prose-a:text-gold prose-a:no-underline hover:prose-a:underline relative overflow-hidden transition-[max-height] duration-700 ease-in-out max-h-[12rem]"
                            >
                                <Fragment
                                    set:html={item.data.projectDescription}
                                />

                                {
                                    /* Gradient Overlay (visible when collapsed) */
                                }
                                <div
                                    id="description-gradient"
                                    class="absolute inset-x-0 bottom-0 h-24 bg-gradient-to-t from-white dark:from-neutral-950 to-transparent pointer-events-none transition-opacity duration-500"
                                >
                                </div>
                            </div>
                        </div>

                        {
                            item.data.projectDescription && (
                                <button
                                    id="toggle-description-btn"
                                    class="group flex items-center gap-2 text-neutral-900 dark:text-white font-bold mt-4 hover:text-gold transition-colors py-2"
                                >
                                    <span id="toggle-btn-text">
                                        Leer descripci√≥n completa
                                    </span>
                                    <svg
                                        id="toggle-btn-icon"
                                        xmlns="http://www.w3.org/2000/svg"
                                        width="20"
                                        height="20"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        class="group-hover:translate-y-1 transition-transform"
                                    >
                                        <path d="m6 9 6 6 6-6" />
                                    </svg>
                                </button>
                            )
                        }

                        {/* Metadata Grid */}
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 pt-8">
                            <div
                                class="p-5 rounded-2xl bg-neutral-50 dark:bg-neutral-900/50 border border-neutral-100 dark:border-neutral-800"
                            >
                                <span
                                    class="block text-xs uppercase tracking-wider text-neutral-500 mb-1"
                                    >Cliente / Fecha</span
                                >
                                <span
                                    class="block font-semibold text-neutral-900 dark:text-white capitalize"
                                    >{item.data.projectDate || "2025"}</span
                                >
                            </div>
                            <div
                                class="p-5 rounded-2xl bg-neutral-50 dark:bg-neutral-900/50 border border-neutral-100 dark:border-neutral-800"
                            >
                                <span
                                    class="block text-xs uppercase tracking-wider text-neutral-500 mb-1"
                                    >Servicios</span
                                >
                                <span
                                    class="block font-semibold text-neutral-900 dark:text-white"
                                    >{
                                        item.data.portfolioTags
                                            ?.slice(0, 2)
                                            .join(", ") || "Desarrollo Web"
                                    }</span
                                >
                            </div>
                        </div>

                        {
                            /* Mobile Action Button (Only visible on small screens where sidebar is hidden) */
                        }
                        {
                            item.data.projectLink && (
                                <div class="lg:hidden pt-4">
                                    <a
                                        href={item.data.projectLink}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="flex items-center justify-center w-full gap-2 bg-gold text-neutral-900 py-4 rounded-xl font-bold shadow-lg shadow-gold/20 hover:bg-gold-500 transition-all"
                                    >
                                        Ver Proyecto Online ‚Üó
                                    </a>
                                </div>
                            )
                        }
                    </div>

                    {/* Image Column */}
                    <div class="w-full xl:w-[45%] flex flex-col gap-8">
                        <div class="relative group w-full perspective-1000">
                            <div
                                class="absolute -inset-1 bg-gradient-to-tr from-gold to-neutral-500 rounded-[2.5rem] opacity-20 blur-2xl group-hover:opacity-30 transition-duration-500"
                            >
                            </div>
                            <div
                                class="absolute inset-0 bg-neutral-900/5 ring-1 ring-inset ring-black/10 rounded-[2rem] z-20 pointer-events-none"
                            >
                            </div>

                            {
                                item.data.heroImage ? (
                                    <img
                                        src={item.data.heroImage}
                                        alt={`Proyecto ${item.data.title}`}
                                        class="relative w-full h-auto rounded-[2rem] shadow-2xl shadow-black/20 border border-neutral-200 dark:border-neutral-800 bg-neutral-100 dark:bg-neutral-900 transform transition-transform duration-700 hover:scale-[1.01] z-10"
                                    />
                                ) : (
                                    <div class="aspect-[4/3] bg-neutral-100 dark:bg-neutral-800 flex items-center justify-center text-neutral-400 dark:text-neutral-600 rounded-[2rem] border border-neutral-200 dark:border-neutral-800 relative z-10">
                                        <span class="text-6xl">üíº</span>
                                    </div>
                                )
                            }

                            {/* Floating Logo Badge */}
                            {
                                item.data.projectLogo && (
                                    <div class="absolute -top-12 -right-4 sm:-right-8 w-24 h-24 sm:w-32 sm:h-32 bg-white dark:bg-neutral-800 rounded-3xl shadow-xl shadow-black/10 border border-white/50 dark:border-neutral-700/50 p-4 sm:p-6 flex items-center justify-center z-30 backdrop-blur-md">
                                        <img
                                            src={item.data.projectLogo}
                                            alt="Logo Cliente"
                                            class="w-full h-full object-contain filter dark:invert-0 transition-all duration-300"
                                            loading="lazy"
                                        />
                                    </div>
                                )
                            }
                        </div>
                    </div>
                </div>
            </header>

            <div
                class="w-full h-px bg-gradient-to-r from-transparent via-neutral-200 dark:via-neutral-800 to-transparent mb-16"
            >
            </div>

            {/* Content Sections */}
            <div class="space-y-12 lg:space-y-24">
                {/* Desaf√≠o */}
                {
                    item.data.challengeText && (
                        <section
                            id="desafio"
                            class="section-scroll scroll-mt-32"
                        >
                            <div class="bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 rounded-3xl p-8 md:p-12 relative overflow-hidden transition-colors duration-300 shadow-sm hover:shadow-md">
                                {/* Decor Blob */}
                                <div class="absolute top-0 right-0 w-64 h-64 bg-gold/5 dark:bg-gold/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2" />

                                <div class="relative z-10">
                                    <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-neutral-100 dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 text-gold text-sm font-bold mb-6 transition-colors">
                                        <div class="w-5 h-5 flex items-center justify-center">
                                            <Fragment set:html={BoltIcon} />
                                        </div>
                                        El Desaf√≠o
                                    </div>

                                    <h2 class="text-3xl lg:text-4xl font-bold text-neutral-900 dark:text-white mb-6 leading-tight">
                                        {item.data.challengeHeading ||
                                            "El Desaf√≠o"}
                                    </h2>

                                    <div
                                        class="prose prose-lg dark:prose-invert max-w-none text-neutral-600 dark:text-neutral-400"
                                        set:html={item.data.challengeText}
                                    />
                                </div>
                            </div>
                        </section>
                    )
                }

                {/* Soluci√≥n */}
                {
                    item.data.solutionText && (
                        <section
                            id="solucion"
                            class="section-scroll scroll-mt-32"
                        >
                            <div class="bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 rounded-3xl p-8 md:p-12 relative overflow-hidden transition-colors duration-300 shadow-sm hover:shadow-md">
                                {/* Decor Blob */}
                                <div class="absolute top-0 right-0 w-64 h-64 bg-gold/5 dark:bg-gold/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2" />

                                <div class="relative z-10">
                                    <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-neutral-100 dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 text-gold text-sm font-bold mb-6 transition-colors">
                                        <div class="w-5 h-5 flex items-center justify-center">
                                            <Fragment set:html={BulbIcon} />
                                        </div>
                                        La Soluci√≥n
                                    </div>

                                    <h2 class="text-3xl lg:text-4xl font-bold text-neutral-900 dark:text-white mb-6 leading-tight">
                                        {item.data.solutionHeading ||
                                            "La Soluci√≥n"}
                                    </h2>

                                    <div
                                        class="prose prose-lg dark:prose-invert max-w-none text-neutral-600 dark:text-neutral-400"
                                        set:html={item.data.solutionText}
                                    />
                                </div>
                            </div>
                        </section>
                    )
                }

                {/* Resultados */}
                {
                    item.data.resultsText && (
                        <section
                            id="resultados"
                            class="section-scroll scroll-mt-32"
                        >
                            <div class="bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 rounded-3xl p-8 md:p-12 relative overflow-hidden transition-colors duration-300 shadow-sm hover:shadow-md">
                                {/* Decor Blob */}
                                <div class="absolute top-0 right-0 w-64 h-64 bg-gold/5 dark:bg-gold/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2" />

                                <div class="relative z-10">
                                    <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-neutral-100 dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 text-gold text-sm font-bold mb-6 transition-colors">
                                        <div class="w-5 h-5 flex items-center justify-center">
                                            <Fragment set:html={ChartIcon} />
                                        </div>
                                        Los Resultados
                                    </div>

                                    <h2 class="text-3xl lg:text-4xl font-bold text-neutral-900 dark:text-white mb-6 leading-tight">
                                        {item.data.resultsHeading ||
                                            "Los Resultados"}
                                    </h2>

                                    <div
                                        class="prose prose-lg dark:prose-invert max-w-none text-neutral-600 dark:text-neutral-400"
                                        set:html={item.data.resultsText}
                                    />
                                </div>
                            </div>
                        </section>
                    )
                }

                {/* Galer√≠a Grid - Masonry Layout */}
                {
                    item.data.galleryImages &&
                        item.data.galleryImages.length > 0 && (
                            <section
                                id="galeria"
                                class="scroll-mt-24 pt-12 section-scroll"
                            >
                                <h2 class="text-3xl font-bold text-neutral-900 dark:text-white mb-8">
                                    Galer√≠a del Proyecto
                                </h2>
                                <div class="columns-1 md:columns-2 gap-6 space-y-6">
                                    {item.data.galleryImages.map((img) => (
                                        <div class="break-inside-avoid rounded-3xl overflow-hidden shadow-sm border border-neutral-200 dark:border-neutral-800 group relative mb-6">
                                            <img
                                                src={img}
                                                alt="Galer√≠a del proyecto"
                                                class="gallery-image w-full h-auto object-cover group-hover:scale-[1.02] transition-transform duration-700 cursor-zoom-in"
                                                loading="lazy"
                                            />
                                            <div class="absolute inset-0 bg-black/0 group-hover:bg-black/5 transition-colors duration-300 pointer-events-none" />
                                        </div>
                                    ))}
                                </div>
                            </section>
                        )
                }

                {/* Fallback */}
                {
                    !hasEnhancedContent && (
                        <div class="prose prose-neutral dark:prose-invert max-w-none mt-12 bg-white dark:bg-neutral-900 p-8 rounded-3xl border border-neutral-200 dark:border-neutral-800 shadow-sm">
                            <Content />
                        </div>
                    )
                }
            </div>

            {/* Related Projects */}
            {
                relatedPortfolios.length > 0 && (
                    <section class="mt-32 pt-16 border-t border-neutral-200 dark:border-neutral-800">
                        <div class="flex items-center justify-between mb-12">
                            <div>
                                <h2 class="text-3xl font-bold text-neutral-900 dark:text-white mb-2">
                                    Otros casos de √©xito
                                </h2>
                                <p class="text-neutral-600 dark:text-neutral-400">
                                    Explora m√°s proyectos similares
                                </p>
                            </div>
                            <a
                                href="/portafolio"
                                class="hidden md:inline-flex items-center font-bold text-gold hover:text-gold-500 transition-colors"
                            >
                                Ver todo el portafolio ‚Üí
                            </a>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                            {relatedPortfolios.map((related) => (
                                <article class="bg-white dark:bg-neutral-900 rounded-3xl overflow-hidden shadow-lg shadow-black/5 hover:shadow-xl hover:shadow-gold/10 border border-neutral-200 dark:border-neutral-800 transition-all duration-300 group flex flex-col h-full hover:translate-y-[-4px]">
                                    <a
                                        href={`/portafolio/${related.id}`}
                                        class="block aspect-[16/10] bg-neutral-100 dark:bg-neutral-800 overflow-hidden relative"
                                    >
                                        {related.data.heroImage ? (
                                            <img
                                                src={related.data.heroImage}
                                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
                                                alt={related.data.title}
                                            />
                                        ) : (
                                            <div class="w-full h-full flex items-center justify-center text-4xl">
                                                üíº
                                            </div>
                                        )}
                                        <div class="absolute inset-0 bg-black/20 group-hover:bg-black/0 transition-colors" />
                                    </a>
                                    <div class="p-6 flex flex-col flex-1">
                                        <div class="flex gap-2 mb-3">
                                            {related.data.portfolioCategories
                                                ?.slice(0, 1)
                                                .map((cat) => (
                                                    <span class="text-[10px] font-bold uppercase tracking-wider text-gold bg-gold/10 px-2 py-1 rounded-md">
                                                        {cat}
                                                    </span>
                                                ))}
                                        </div>
                                        <h3 class="text-lg font-bold text-neutral-900 dark:text-white mb-2 line-clamp-2 leading-snug group-hover:text-gold transition-colors">
                                            <a
                                                href={`/portafolio/${related.id}`}
                                            >
                                                {related.data.title}
                                            </a>
                                        </h3>
                                    </div>
                                </article>
                            ))}
                        </div>
                    </section>
                )
            }
        </div>
    </div>

    {/* Image Lightbox Modal */}
    <div
        id="lightbox-modal"
        class="fixed inset-0 z-[100] hidden flex items-center justify-center bg-black/90 backdrop-blur-sm opacity-0 transition-opacity duration-300"
    >
        <button
            id="lightbox-close"
            class="absolute top-4 right-4 text-white hover:text-gold p-2"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="32"
                height="32"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><line x1="18" y1="6" x2="6" y2="18"></line><line
                    x1="6"
                    y1="6"
                    x2="18"
                    y2="18"></line></svg
            >
        </button>
        <img
            id="lightbox-image"
            src=""
            alt="Ampliada"
            class="max-w-[90vw] max-h-[90vh] object-contain rounded-xl shadow-2xl scale-95 transition-transform duration-300"
        />
    </div>
</Layout>

<script>
    // Read More Toggle Logic
    const toggleBtn = document.getElementById("toggle-description-btn");
    const container = document.getElementById("description-container");
    const gradient = document.getElementById("description-gradient");
    const toggleText = document.getElementById("toggle-btn-text");
    const toggleIcon = document.getElementById("toggle-btn-icon");

    if (toggleBtn && container && toggleText && toggleIcon && gradient) {
        toggleBtn.addEventListener("click", () => {
            // Toggle expanded state
            if (container.classList.contains("max-h-[12rem]")) {
                // EXPAND
                container.classList.remove("max-h-[12rem]");
                container.classList.add("max-h-[5000px]"); // Large enough value for transition
                gradient.classList.remove("opacity-100");
                gradient.classList.add("opacity-0");

                toggleText.textContent = "Leer menos";
                toggleIcon.style.transform = "rotate(180deg)";
            } else {
                // COLLAPSE
                container.classList.add("max-h-[12rem]");
                container.classList.remove("max-h-[5000px]");
                gradient.classList.add("opacity-100");
                gradient.classList.remove("opacity-0");

                toggleText.textContent = "Leer descripci√≥n completa";
                toggleIcon.style.transform = "rotate(0deg)";

                // Optional: Scroll back up slightly if user is far down
                toggleBtn.scrollIntoView({
                    behavior: "smooth",
                    block: "center",
                });
            }
        });
    }

    // Lightbox Logic
    const lightboxModal = document.getElementById("lightbox-modal");
    const lightboxImage = document.getElementById("lightbox-image");
    const lightboxClose = document.getElementById("lightbox-close");
    const galleryImages = document.querySelectorAll(".gallery-image");

    function openLightbox(src: string) {
        if (!lightboxModal || !lightboxImage) return;
        (lightboxImage as HTMLImageElement).src = src;
        lightboxModal.classList.remove("hidden");
        // Small delay to allow display:block to apply before opacity transition
        requestAnimationFrame(() => {
            lightboxModal.classList.remove("opacity-0");
            lightboxImage.classList.remove("scale-95");
            lightboxImage.classList.add("scale-100");
        });
        document.body.style.overflow = "hidden"; // Prevent background scrolling
    }

    function closeLightbox() {
        if (!lightboxModal || !lightboxImage) return;
        lightboxModal.classList.add("opacity-0");
        lightboxImage.classList.remove("scale-100");
        lightboxImage.classList.add("scale-95");

        setTimeout(() => {
            lightboxModal.classList.add("hidden");
            (lightboxImage as HTMLImageElement).src = "";
            document.body.style.overflow = "";
        }, 300);
    }

    galleryImages.forEach((img) => {
        img.addEventListener("click", () => {
            const src = img.getAttribute("src");
            if (src) openLightbox(src);
        });
    });

    if (lightboxClose) {
        lightboxClose.addEventListener("click", closeLightbox);
    }

    if (lightboxModal) {
        lightboxModal.addEventListener("click", (e) => {
            if (e.target === lightboxModal) closeLightbox();
        });
    }

    // Close on escape key
    document.addEventListener("keydown", (e) => {
        if (
            e.key === "Escape" &&
            lightboxModal &&
            !lightboxModal.classList.contains("hidden")
        ) {
            closeLightbox();
        }
    });

    // Intersection Observer for Table of Contents
    const observer = new IntersectionObserver(
        (entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    const id = entry.target.id;
                    const tocLinks = document.querySelectorAll(".toc-link");

                    tocLinks.forEach((link) => {
                        const href = link.getAttribute("href")?.substring(1);
                        const indicator = link.querySelector(".indicator");

                        if (href === id) {
                            // Activate
                            link.classList.add(
                                "bg-gold",
                                "text-neutral-900",
                                "font-bold",
                            );
                            link.classList.remove(
                                "text-neutral-600",
                                "dark:text-neutral-400",
                                "hover:bg-neutral-50",
                                "dark:hover:bg-neutral-800/50",
                            );
                            if (indicator) {
                                indicator.classList.remove(
                                    "bg-neutral-300",
                                    "dark:bg-neutral-700",
                                );
                                indicator.classList.add("bg-neutral-900");
                            }
                        } else {
                            // Deactivate
                            link.classList.remove(
                                "bg-gold",
                                "text-neutral-900",
                                "font-bold",
                            );
                            link.classList.add(
                                "text-neutral-600",
                                "dark:text-neutral-400",
                                "hover:bg-neutral-50",
                                "dark:hover:bg-neutral-800/50",
                            );
                            if (indicator) {
                                indicator.classList.add(
                                    "bg-neutral-300",
                                    "dark:bg-neutral-700",
                                );
                                indicator.classList.remove("bg-neutral-900");
                            }
                        }
                    });
                }
            });
        },
        {
            rootMargin: "-20% 0px -50% 0px",
        },
    );

    // Observe all sections
    document.querySelectorAll(".section-scroll").forEach((section) => {
        observer.observe(section);
    });
</script>
