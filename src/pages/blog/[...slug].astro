---
import { type CollectionEntry, getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
// ProfileCard removed from layout

export const prerender = true;

export async function getStaticPaths() {
    const posts = await getCollection("blog");
    return posts.map((post) => ({
        params: {
            // Ensure slug is clean of extensions even if Astro behavior varies
            slug: post.slug.replace(/\.[^/.]+$/, ""),
        },
        props: post,
    }));
}
type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content } = await post.render();

const schema = {
    "@context": "https://schema.org",
    "@type": "Article",
    headline: post.data.title,
    image: [new URL(post.data.heroImage || "/favicon.webp", Astro.site)],
    datePublished: post.data.pubDate.toISOString(),
    dateModified:
        post.data.updatedDate?.toISOString() || post.data.pubDate.toISOString(),
    author: [
        {
            "@type": "Person",
            name: "Nicolas Cardenas",
            url: Astro.site,
        },
    ],
};
---

<Layout
    title={`${post.data.title} - Nicolas Cardenas`}
    description={post.data.description}
    image={post.data.heroImage}
    schema={schema}
>
    <div class="py-12 px-6">
        <!-- Breadcrumbs -->
        <nav
            class="max-w-6xl mx-auto flex items-center text-sm text-neutral-500 dark:text-neutral-500 mb-8 overflow-x-auto whitespace-nowrap transition-colors"
        >
            <a href="/" class="hover:text-gold transition-colors">Inicio</a>
            <span class="mx-2">/</span>
            <a href="/blog" class="hover:text-gold transition-colors">Blog</a>
            <span class="mx-2">/</span>
            <span
                class="text-neutral-900 dark:text-neutral-300 truncate transition-colors"
                >{post.data.title}</span
            >
        </nav>

        <!-- Main Content -->
        <div class="max-w-6xl mx-auto space-y-12">
            <section
                class="bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 rounded-3xl p-8 md:p-12 relative overflow-hidden transition-colors duration-300 shadow-xl shadow-gold/5"
            >
                <!-- Background decoration -->
                <div
                    class="absolute top-0 right-0 w-64 h-64 bg-gold/5 dark:bg-gold/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 pointer-events-none transition-colors"
                >
                </div>

                <div class="relative z-10">
                    <!-- Hero Section -->
                    {
                        !post.data.hideTitle && (
                            <header class="mb-12 text-center">
                                <div class="flex items-center justify-center gap-4 mb-6 text-sm">
                                    {post.data.category && (
                                        <span class="bg-gold/10 text-gold px-3 py-1 rounded-full font-medium border border-gold/20">
                                            {post.data.category}
                                        </span>
                                    )}
                                    <time
                                        datetime={post.data.pubDate.toISOString()}
                                        class="text-neutral-500 dark:text-neutral-400 transition-colors"
                                    >
                                        {post.data.pubDate.toLocaleDateString(
                                            "es-CO",
                                            {
                                                weekday: "long",
                                                year: "numeric",
                                                month: "long",
                                                day: "numeric",
                                            },
                                        )}
                                    </time>
                                </div>

                                <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 dark:text-white mb-6 leading-tight transition-colors">
                                    {post.data.title}
                                </h1>

                                <p class="text-xl text-neutral-600 dark:text-neutral-400 max-w-2xl mx-auto mb-8 transition-colors">
                                    {post.data.description}
                                </p>

                                {post.data.heroImage && (
                                    <div class="relative aspect-video rounded-2xl overflow-hidden border border-neutral-200 dark:border-white/10 shadow-2xl bg-neutral-100 dark:bg-black transition-colors">
                                        <img
                                            src={post.data.heroImage}
                                            alt={post.data.title}
                                            class="w-full h-full object-cover"
                                        />
                                    </div>
                                )}
                            </header>
                        )
                    }

                    <!-- Content -->
                    <div class="max-w-none mx-auto">
                        <div
                            class="prose prose-xl prose-neutral dark:prose-invert max-w-none
                            prose-headings:text-neutral-900 dark:prose-headings:text-white
                            prose-headings:font-bold
                            prose-p:text-neutral-600 dark:prose-p:text-neutral-300 prose-p:leading-relaxed
                            prose-a:text-gold hover:prose-a:text-gold/80
                            prose-strong:text-neutral-900 dark:prose-strong:text-white
                            prose-code:text-gold prose-code:bg-neutral-100 dark:prose-code:bg-neutral-800 prose-code:px-1 prose-code:rounded
                            prose-blockquote:border-l-gold prose-blockquote:bg-neutral-50 dark:prose-blockquote:bg-neutral-900/50 prose-blockquote:py-2 prose-blockquote:px-6 prose-blockquote:rounded-r-lg prose-blockquote:text-neutral-700 dark:prose-blockquote:text-neutral-300
                            prose-img:rounded-2xl prose-img:shadow-xl
                            prose-hr:border-neutral-200 dark:prose-hr:border-white/10
                            transition-colors"
                        >
                            <Content />
                        </div>

                        <!-- Tags -->
                        {
                            post.data.tags && (
                                <div class="mt-16 pt-8 border-t border-neutral-200 dark:border-white/10 transition-colors">
                                    <div class="flex items-center gap-4">
                                        <h3 class="text-sm font-bold text-neutral-500 dark:text-neutral-400 uppercase tracking-wider transition-colors">
                                            Temas relacionados:
                                        </h3>
                                        <div class="flex flex-wrap gap-2">
                                            {post.data.tags.map((tag) => (
                                                <span class="bg-neutral-100 dark:bg-neutral-900 border border-neutral-300 dark:border-neutral-700 text-neutral-600 dark:text-neutral-300 px-3 py-1 rounded-full text-sm hover:border-gold transition-colors cursor-default hover:text-gold">
                                                    #{tag}
                                                </span>
                                            ))}
                                        </div>
                                    </div>
                                </div>
                            )
                        }
                    </div>
                </div>
            </section>
        </div>
    </div>
</Layout>
