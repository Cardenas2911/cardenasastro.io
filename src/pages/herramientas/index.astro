---
import Layout from "../../layouts/Layout.astro";

const tools = [
  {
    title: "Calculadora ROI SEO",
    description: "Estima el retorno de inversión potencial de tus campañas de posicionamiento orgánico con nuestra calculadora avanzada.",
    href: "/herramientas/calculadora-roi-seo",
    icon: "calculator",
    badge: "Popular"
  },
  {
    title: "Test de Salud SEO",
    description: "Realiza un diagnóstico rápido de los factores técnicos y de contenido más críticos de tu sitio web.",
    href: "/herramientas/test-salud-seo",
    icon: "health",
    badge: "Gratis"
  },
  {
    title: "Simulador SERP Google",
    description: "Visualiza y optimiza cómo aparecerán tus títulos y metadescripciones en los resultados de búsqueda móvil y escritorio.",
    href: "/herramientas/simulador-serp-google",
    icon: "google",
    badge: "Esencial"
  },
  {
    title: "Generador Link Reseñas",
    description: "Crea enlaces directos y códigos QR para solicitar reseñas de 5 estrellas en tu Perfil de Negocio de Google.",
    href: "/herramientas/generador-enlaces-resenas-google",
    icon: "star",
    badge: "Local SEO"
  },
];
---

<Layout
  title="Herramientas SEO Gratuitas | Nicolás Cárdenas"
  description="Accede a herramientas gratuitas de SEO profesional: Calculadora ROI, Simulador SERP, Test de Salud y Generador de Enlaces para Google."
>
    <div class="space-y-12">
        <!-- Hero Section -->
        <section class="bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 rounded-3xl p-8 md:p-12 relative overflow-hidden transition-colors duration-300 text-center">
            
            <!-- Background Glow (Consistent with Index) -->
            <div class="absolute top-0 right-0 w-64 h-64 bg-gold/5 dark:bg-gold/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
            <div class="absolute bottom-0 left-0 w-64 h-64 bg-blue-500/5 dark:bg-blue-500/10 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"></div>

            <div class="relative z-10 max-w-3xl mx-auto">
                <div class="inline-block px-4 py-1.5 rounded-full bg-neutral-100 dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 text-gold text-sm font-medium mb-6 transition-colors">
                    Recursos Gratuitos
                </div>
                
                <h1 class="text-4xl md:text-5xl font-bold text-neutral-900 dark:text-white mb-6 leading-tight transition-colors">
                    Herramientas de <span class="text-gold">Alto Impacto</span><br />
                    para tu SEO
                </h1>
                
                <p class="text-neutral-600 dark:text-neutral-400 text-lg mb-8 transition-colors leading-relaxed">
                    He desarrollado esta colección de utilidades para ayudarte a diagnosticar, planificar y ejecutar estrategias de posicionamiento más efectivas.
                </p>
            </div>
        </section>

        <!-- Tools Grid -->
        <section>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {tools.map((tool) => (
                    <a href={tool.href} class="group block h-full">
                        <div class="bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 p-8 rounded-3xl transition-all duration-300 hover:-translate-y-1 hover:shadow-xl hover:border-gold/30 dark:hover:border-gold/30 h-full flex flex-col relative overflow-hidden">
                            
                            <!-- Internal Glow -->
                            <div class="absolute top-0 right-0 w-32 h-32 bg-gold/5 rounded-full blur-2xl -translate-y-1/2 translate-x-1/2 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

                            <div class="relative z-10 flex flex-col h-full">
                                <div class="flex items-start justify-between mb-6">
                                    <div class="w-14 h-14 bg-neutral-100 dark:bg-neutral-800 rounded-2xl flex items-center justify-center text-gold text-2xl group-hover:bg-gold/10 transition-colors duration-300">
                                        {tool.icon === 'calculator' && (
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" /></svg>
                                        )}
                                        {tool.icon === 'health' && (
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>
                                        )}
                                        {tool.icon === 'google' && (
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
                                        )}
                                        {tool.icon === 'star' && (
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" /></svg>
                                        )}
                                    </div>
                                    {tool.badge && (
                                        <span class="px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider bg-neutral-100 dark:bg-neutral-800 text-neutral-600 dark:text-neutral-400 border border-neutral-200 dark:border-neutral-700">
                                            {tool.badge}
                                        </span>
                                    )}
                                </div>

                                <h3 class="text-xl font-bold text-neutral-900 dark:text-white mb-3 group-hover:text-gold transition-colors">
                                    {tool.title}
                                </h3>
                                <p class="text-neutral-600 dark:text-neutral-400 text-sm leading-relaxed mb-6 flex-1">
                                    {tool.description}
                                </p>

                                <div class="flex items-center text-gold font-medium text-sm gap-2 group-hover:gap-3 transition-all pt-4 border-t border-neutral-100 dark:border-neutral-800">
                                    Usar herramienta
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
                                </div>
                            </div>
                        </div>
                    </a>
                ))}
            </div>
        </section>
    </div>
</Layout>
