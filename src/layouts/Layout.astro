---
interface Props {
    title: string;
    description?: string;
    image?: string;
    robots?: string;
    schema?: object;
    showGlobalBanner?: boolean;
}

import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import CookieBanner from "../components/CookieBanner.astro";
import GlobalBanner from "../components/GlobalBanner.astro";
import WhatsAppButton from "../components/WhatsAppButton.astro";
import MouseSparkles from "../components/MouseSparkles.astro";
import SEOHead from "../components/SEOHead.astro";

const {
    title,
    description,
    image,
    robots,
    schema,
    showGlobalBanner = true,
} = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
    <head>
        <SEOHead
            title={title}
            description={description}
            image={image}
            robots={robots}
            schema={schema}
        />
    </head>
    <body
        class="bg-neutral-50 dark:bg-black text-neutral-900 dark:text-neutral-300 font-sans antialiased min-h-screen flex flex-col transition-colors duration-300"
    >
        <Header />
        <main
            class="flex-grow w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-32 pb-8"
        >
            <slot />
        </main>
        <Footer />
        <CookieBanner />
        <WhatsAppButton />
        <MouseSparkles />
    </body>
</html>
